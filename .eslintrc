{
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:react/recommended",
    "plugin:jsx-a11y/recommended",
    "prettier",       // ! make sure prettier, then prettier/react
  ],
  "rules": {
    "no-console": "warn",
    "arrow-body-style": [
      1,
      "always"
    ]
  },
  "parser": "babel-eslint",
  "plugins": [
    "react",
    "import",
    "jsx-a11y",
    "react-hooks"
  ],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  }
}